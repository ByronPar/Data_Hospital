@model Practica2.Models.ESPECIALIDAD_DOCTOR

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Asignacion de especialidad doctor. </h2>


@{
    if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        //message tiene valor
        <div class="alert alert-success">@ViewBag.Message</div>
    }

}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ESPECIALIDAD DOCTOR</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.idEspecialidad, "idEspecialidad", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idEspecialidad", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idEspecialidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idDoctor, "idDoctor", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idDoctor", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idDoctor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Asignar Especialidad" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Concluir asignación", "Index", "DOCTORs")
</div>
